<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context=".AppInfoActivity"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="96dp"
        android:layout_gravity="center_horizontal">

        <Button
            android:id="@+id/buttonSave"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:text="save"
            android:textSize="22dp"
            android:textStyle="bold"
            android:background="@drawable/but"
            android:onClick="onButton1Clicked"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@+id/buttonIntent" />

        <Button
            android:id="@+id/buttonIntent"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:text="주소록"
            android:textSize="22dp"
            android:textStyle="bold"
            android:background="@drawable/but"
            android:layout_gravity="right"
            android:onClick="onButton2Clicked"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_alignTop="@+id/buttonSave"
            android:layout_alignParentEnd="true" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="194dp"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textViewSyntaxAction"
            android:layout_gravity="center_horizontal" />

        <EditText
            android:id="@+id/editText1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="22dp"
            android:layout_weight="0.70"
            android:layout_marginTop="78dp"
            android:layout_below="@+id/textViewSyntaxAction"
            android:layout_alignParentStart="true" />
    </RelativeLayout>

</RelativeLayout>